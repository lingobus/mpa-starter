extends ../../common/jade/_base

block meta
  +favicon()
  +analytics()
  +meta-seo()
  if useLs
    if isdev
      include ../../common/jade/_seed
    else
      include ../../common/jade/_seed-min

//- block libcss

block css
  +element-ui-css()
  link(rel="stylesheet" href="/static/css/bem/index.css")

mixin content ()
  - var b = 'block'
  center(class="#{b}")
    h1(class="#{b}__element") my parent class is .#{b}, my class is .#{b}__element
    h1(class="#{b}__element is-warning") my parent class is .#{b}, my class is .#{b}__element with .is-warning as modifier
block main
  #root
    +content()
block js
    script(src="/static/js/bem/index.js")
