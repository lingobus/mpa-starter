extends ../../common/jade/_base

block meta
  +favicon()
  +meta-seo()

//- block libcss

block css
  +element-ui-css()
  link(rel="stylesheet" href="/static/css/register/index.css")

mixin content ()
  - var b = 'register'
  div(class="#{b}")
    div(class="#{b}__others")
      el-button(@click="handleWechatLogin") Wechat
      el-button(@click="handleFacebookLogin") Facebook
      | &nbsp;&nbsp;&nbsp;&nbsp;
      a(v-if="type===TYPE_EMAIL", :href="`/register?type=${TYPE_PHONE}`") With Phone
      a(v-else, :href="`/register?type=${TYPE_EMAIL}`") With Email
    <br>
    phone-register(v-if="type===TYPE_PHONE")
    email-register(v-else)

block main
  #root
    +content()
block js
    script(src="/static/js/register/index.js")
